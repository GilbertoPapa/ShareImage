<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_vertical"
    android:padding="15dp"
    tools:context="com.gilbertopapa.shareimage.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_register"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_party_mode" />

        <EditText
            android:id="@+id/edt_nameLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iv_register"
            android:layout_marginTop="59dp"
            android:background="@drawable/background_textbox"
            android:ems="10"
            android:hint="Digite seu usuário."
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@android:color/white"

            android:textColorHint="@android:color/white" />

        <EditText
            android:id="@+id/edt_passwordLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edt_nameLogin"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_textbox"
            android:ems="10"
            android:hint="Digite sua senha."
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"

            />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_passwordLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:background="@drawable/background_button"
            android:text="Login"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_registerUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Não tem conta ?"
            android:textColor="@android:color/white" />

    </RelativeLayout>


</RelativeLayout>
